<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/movies/new.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>

  <form action="">
    <div class="image">
      <img src="https://image.tmdb.org/t/p/w342/<%= movie.posterLarge %>" alt="movie poster">
    </div>
    <div class="info">

      <div>
        <label for="">Release Date:</label>
        <p> <%= movie.releaseDate %></p>
      </div>

      <div>
        <label for="">Genre(s):</label>
        <% movie.genres.forEach(element => { %>
          <p class="item"><%= element %></p>
        <% }) %>
       
      </div>

      <div>
        <label for="">Plot:</label>
        <p></p>
      </div>

      <div>
        <label for="">Director(s):</label>
        <% movie.directors.forEach(element => { %>
          <p class="item"><%= element %></p>
        <% }) %>
     
         
      </div>

      <div>
        <label for="">Performer(s):</label>
        <% movie.performers.forEach(element => { %>
          <p class="item"><%= element %></p>
        <% }) %>
     
      </div>
      </form>
    </div>












</main>

<%- include("../partials/footer") %>