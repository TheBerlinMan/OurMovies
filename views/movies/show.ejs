<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/movies/show.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= movie.title %></h1>

  <div class="main">

    <div class="image">
      <img src="https://image.tmdb.org/t/p/w342/<%= movie.posterLarge %>" alt="movie poster">
      <form class="reviewForm" action="/movies/<%= movie.id %>/reviews" id="add-review-form" method="POST">
        <h3>Leave Review</h3>
        <!-- <div class="line"></div> -->
        <label for="original-viewing">Original Viewing</label>
        <input type="date" name="original-viewing" id="original-viewing">
        <label for="rating-select">Rating:</label>
        <select name="rating" id="rating-select">
          <option value="0">0</option>
          <option value="0.5">0.5</option>
          <option value="1">1</option>
          <option value="1.5">1.5</option>
          <option value="2">2</option>
          <option value="2.5">2.5</option>
          <option value="3">3</option>
          <option value="3.5">3.5</option>
          <option value="4">4</option>
          <option value="4.5">4.5</option>
          <option value="5">5</option>
        </select>
        <!-- <div class="line"></div> -->
        <button>Submit</button>
      </form>
    </div>

    <div class="info">

      <div>
        <label for="">Release Date:</label>
        <p> <%= movie.releaseDate.toLocaleString() %></p>
      </div>

      <div>
        <label for="">Genre(s):</label>
        <% movie.genres.forEach(element => { %>
          <p class="item"><%= element %></p>
        <% }) %>
      </div>

      <div>
        <label for="">Plot:</label>
        <p><%= movie.plot %></p>
      </div>

      <div>
        <label for="">Director(s):</label>
        <% movie.directors.forEach(element => { %>
          <p class="item"><%= element %></p>
        <% }) %>
      </div>

      <div>
        <label for="">Performer(s):</label>
        <% movie.performers.forEach(element => { %>
          <p class="item"><%= element %></p>
        <% }) %>
      </div>

    </div>
  </div>












</main>

<%- include("../partials/footer") %>