<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/movies/new.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>

  <form action="">
    <div class="image">
      <img src="https://image.tmdb.org/t/p/w342/<%= selectedMovieData['poster_path'] %>" alt="movie poster">
    </div>
    <div class="info">

      <div>
        <label for="">Release Date:</label>
        <p> <%= selectedMovieData['release_date'] %></p>
      </div>

      <div>
        <label for="">Genre(s):</label>
        <% selectedMovieData.genres.forEach(element => { %>
          <p class="item"><%= element.name %></p>
        <% }) %>
      </div>

      <div>
        <label for="">Plot:</label>
        <p><%= selectedMovieData.overview %></p>
      </div>

      <div>
        <label for="">Director:</label>
        
        <% selectedMovieData.credits.crew.forEach(element => { %>
          <% if (element.job === 'Director') { %>
            <p class="item"><%= element.name %></p>
          <% } %>  
        <% }) %>
         
      </div>

      <div>
        <label for="">Actors:</label>
        <% selectedMovieData.credits.cast.forEach(element => { %>
          <p class="item"><%= element.name %></p>
        <% }) %>
      </div>

    </div>











  </form>
</main>

<%- include("../partials/footer") %>